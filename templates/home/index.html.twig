{% extends 'base.html.twig' %}

{% block head %}
<!DOCTYPE html>
<html>
<head>
    <html lang="fr-FR">
    <meta charset="UTF-8">
    <title>{% block title %}Home{% endblock %}</title>
        {% block stylesheets %}
            <link href="/css/style.css" rel="stylesheet" type="text/css"/>
        {% endblock %}   
</head>
</html>
{% endblock %}

{% block body %}
<html>
<body>
        {{ include('base/nav.html.twig') }}
        {% if app.user %}
                <div class="logout">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% else %}
                <div class="login"><a href="{{ path('app_login') }}">login</a></div>
                <div class="login"><a href="{{ path('app_register') }}">register</a></div>
        {% endif %}

        <div class="blue_bubble"></div> <div class="blue_bubble_blur"></div>
</body>
</html>
{% endblock %}

