{% extends 'base.html.twig' %}

{% block head %}
<!DOCTYPE html>
<html>
<head>
    <html lang="fr-FR">
    <meta charset="UTF-8">
    <title>{% block title %}Food Sens{% endblock %}</title>
        {% block stylesheets %}
         <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
            <link href="/css/style3.css" rel="stylesheet" type="text/css"/>
            <link href="/css/auth1.css" rel="stylesheet" type="text/css"/>

            <link rel="preconnect" href="https://fonts.googleapis.com">
        {% endblock %}   
</head>
</html>
{% endblock %}

{% block body %}
<html>
<body>
        
        
        <span class="white_bubble1"></span> <span class="white_bubble1_blur"></span>
        <span class="white_bubble2"></span> <span class="white_bubble2_blur"></span>
        <span class="white_bubble3"></span> <span class="white_bubble3_blur"></span>
        <span class="blue_bubble"></span> <span class="blue_bubble_blur"></span>
        <span class="blue_bubble"></span> <span class="blue_bubble_blur"></span>
        <span class="yellow_bubble"></span> <span class="yellow_bubble_blur"></span>

        <div class="main3">
            <div class="main1">
              {{ include('base/nav.html.twig') }}
                <div class="menu">
                    <a href=""><div class="menu_1"> 
                            <img class="img" src="/img/Chef_Monochromatic.png"alt="Icone de cuisto">
                            <p> Mon Frigo </p> 
                    </div></a>
                   
                    <a href="{{ path('app_myFav', {"id" : app.user.id }) }}"><div class="menu_1"> 
                            <img class="img" src="/img/Like_Monochromatic.png"alt="Icone de cuisto">
                            <p> Mes Favoris</p> 
                    </div></a>

                    <a href=""><div class="menu_1"> 
                            <img class="img" src="/img/Search_engine _Monochromatic.png"alt="Icone de cuisto">
                            <p> Chercher une recette</p> 
                    </div></a>

                    <a href=""><div class="menu_1"> 
                            <img class="img" src="/img/Finance_analytics _Monochromatic.png"alt="Icone de cuisto">
                            <p>Recap Journalier</p> 
                    </div></a>
                </div>
            </div>
                    <div class="main2">
                    {% if name == 'allRecipe' %}
                     {% for recipe in recipes %}
                     <div class="card" style="width: 18rem;">
                     <img src="{{ asset('uploads/recipe/' ~ recipe.image) }}" class="card-img-top" alt="recipeimage">
                    <div class="card-body">
                     <h5 class="card-title">{{recipe.name}}</h5>
                    <p class="card-text">{{recipe.steps}}</p>
                        <a href="{{ path('app_showRecipe',{"id" : recipe.id })}}" class="btn btn-primary">Go</a>
                          <a href="{{ path('app_like', {"id" : recipe.id }) }}">like</a>
                          {# <img src='https://img.icons8.com/ios/64/-synthetidiamond-also-referred-to-as-laboratory-grown-diamond./hearts--v1.png' alt='test'>
                         <img src='https://img.icons8.com/office/64/-synthetidiamond-also-referred-to-as-laboratory-grown-diamond./hearts.png' alt='test1'> #}
                      </div>
                        </div>
                     {% endfor %}
                     {% elseif name == 'showRecipe' %}
                     {{ include('home/showRecipe.html.twig') }}
                     {% elseif name == 'myFav' %}
                       {{ include('home/myFav.html.twig') }}
                     {% endif %}
                    </div>


                    <div class="main4">
                        <div class="profile">
                            Mon Profil
                        {% if app.user %}
                        <div class="logout">
                            <div class="logout_p">
                                <p>Vous êtes connecté en tant que : </p>  {{ app.user.userIdentifier }}  
                            </div>
                            <div class="profile_picture">
                            <img src="/img/photo_profil.png" >  <!-- Créer une vriable en BDD ! -->
                            </div>
                            <a href="{{ path('app_logout') }}"><button class="login">Se Déconnecter</button></a>
                        </div>
                        {% else %}
                        <div class="intro">Vous n'êtes pas connecté</div>
                        <div class="intro2">Authentifiez vous dès maintenant !</div>
                        <div class="login_box">
                            <a href="{{ path('app_login') }}"><button class="login">Se Connecter</button></a>
                           <a href="{{ path('app_register') }}"> <button class="login">S'Inscrire</button></a>
                        </div>
                        {% endif %}
                        </div>                   
                    </div>                  
        </div>
</body>
</html>
{% endblock %}

{% block javascripts %}
            
{% endblock %}

