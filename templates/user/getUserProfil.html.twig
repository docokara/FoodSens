


 <div style="text-align: center">            
   <h2>Profil utilisateur</h2>
   {% if user.image != null %}
            <img src="{{ asset('uploads/' ~ user.image) }}" class="card-img-top" alt="infoImage" style="width : 300px">  
   {% else %}
         <img src="{{ asset('img/photo_profil.png') }}" class="card-img-top" alt="basicimg" style="width : 300px" >  
   {% endif %}
    <h3> Pseudo :</h3> {{user.pseudo}} 
    <h3>  Email  :</h3>  {{user.email}}
 <div>
    <h2 style='padding-top: 4vh'>Recettes Favories</h2>
     <div style="display: flex">
  {% for recipe in userFavories %}
                     <div class="card" style="width: 18rem;">
                     <img src="{{ asset('uploads/' ~ recipe.image) }}" class="card-img-top" alt="recipeimage">
                    <div class="card-body">
                     <h5 class="card-title">{{recipe.name}}</h5>
                    <p class="card-text">{{recipe.steps}}</p>
                        <a href="{{ path('show_recipe',{"id" : recipe.id})}}" class="btn btn-primary">Go</a>
                          <a href="{{ path('user_like', {"id" : recipe.id }) }}">like</a>
                          {# <img src='https://img.icons8.com/ios/64/-synthetidiamond-also-referred-to-as-laboratory-grown-diamond./hearts--v1.png' alt='test'>
                         <img src='https://img.icons8.com/office/64/-synthetidiamond-also-referred-to-as-laboratory-grown-diamond./hearts.png' alt='test1'> #}
                      </div>
                        </div>
                     {% endfor %}
   </div>
   <h2 style='padding-top: 4vh'>Commentaires de l'utilisateur</h2>
    {% for commentaire in userMessage %}
    <div style="border : 1px solid black; width = 80%;">
         <p> {{commentaire.content}}</p>
               <h5>envoy√© par : <a href="{{path('get_user_profil', {"id": commentaire.owner.id }) }}">{{commentaire.owner.pseudo}}</a></h5>
                  <h5>le : {{commentaire.date|date("m/d/Y")}}</h5>
                  </div>
    {% endfor %}
                     </div>
   </div>

 
