        <span class="blue_bubble"></span> <span class="blue_bubble_blur"></span>
        <span class="yellow_bubble"></span> <span class="yellow_bubble_blur"></span>

        <div class="main3">
            <div class="main1">
              <div class="main1">
              {{ include('base/nav.html.twig') }}
                <div class="menu">
                    <a href=""><div class="menu_1"> 
                            <img class="img" src="/img/Chef_Monochromatic.png"alt="Icone de cuisto">
                            <p> Mon Frigo </p> 
                    </div></a>
                   
                    <a href=""><div class="menu_1"> 
                            <img class="img" src="/img/Like_Monochromatic.png"alt="Icone de cuisto">
                            <p> Mes Favoris</p> 
                    </div></a>

                    <a href=""><div class="menu_1"> 
                            <img class="img" src="/img/Search_engine _Monochromatic.png"alt="Icone de cuisto">
