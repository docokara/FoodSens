{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    {{ include('base/nav.html.twig') }}
 <div>

{% set createPath = "admin_" ~ name ~ "_create" %}
<table>
  {% for element in data %}
    <tr>
      {% for info in element %}
        {% if info is iterable %}
            {% for el in info %}
        <td>
              {{el}}
        </td>
            {% endfor %}
        {% else %}
          <td>{{info}}</td>
        {% endif %}
    {% endfor %}

    {% for path in paths %}
    {% set name = path|slice(11) %}
     <td> <a href="{{ path(path, {"id": element.id}) }}">{{name}}</a></td>
      {% endfor %}
    </tr>
  {% endfor %}
  </table>
  <a href="{{ path(createPath) }}">Create</a>
</div>

{% endblock %}
