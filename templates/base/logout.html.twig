 <div class="logout">
                            <div class="logout_p">
                                <p>Vous êtes connecté en tant que : </p>  {{ app.user.userIdentifier }}  
                            </div>
                            <div class="profile_picture">
                                        {% if app.user.image %}
                                            <img src="{{ asset('uploads/' ~ app.user.image) }}" class="card-img-top" alt="infoImage" > 
                                        {% else %}
                                        <img src="{{ asset('img/photo_profil.png') }}" class="card-img-top" alt="basicimg" > 
                                        {% endif %}       
                            </div>
                            <div class="link">
                            <a href="{{ path('user') }}"> <button class="login">Mon Profil</button></a>
                            <a href="{{ path('app_logout') }}"><button class="login">Se Déconnecter</button></a>
                            </div>
                        </div>